@model IEnumerable<SharedModels.Models.Tags>

@{
    ViewBag.Title = "Início";
}
<div class="container body-content">
    <h2>Início - Tags</h2>

    <p>
        @Html.ActionLink("Criar Novo", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacaoTag)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObservacaoTag)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.TagId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.TagId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Excluir", "Delete", new { id = item.TagId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>